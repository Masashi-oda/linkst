<% provide :title,  t("Listing ", model: t('activerecord.models.status').pluralize(:locale)) %>
<h1><%= yield(:title) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.status.user') %></th>
      <th><%= t('activerecord.attributes.status.category') %></th>
      <th><%= t('activerecord.attributes.status.experience') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.user.name %></td>
        <td><%= status.category.name %></td>
        <td><%= status.experience %></td>
        <td><%= link_to t('Show'), status %></td>
        <td><%= link_to t('Edit'), edit_status_path(status) %></td>
        <td><%= link_to t('Destroy'), status, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New ', model: t('activerecord.models.status')), new_status_path %>
