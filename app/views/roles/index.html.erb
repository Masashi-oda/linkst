<% provide :title,  t("Listing ", model: t('activerecord.models.role').pluralize(:locale)) %>
<h1><%= yield(:title) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.role.name') %></th>
      <th><%= t('activerecord.attributes.role.japanese_name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.japanese_name %></td>
        <td><%= link_to t('Show'), role %></td>
        <td><%= link_to t('Edit'), edit_role_path(role) %></td>
        <td><%= link_to t('Destroy'), role, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New ', model: t('activerecord.models.role')), new_role_path %>
